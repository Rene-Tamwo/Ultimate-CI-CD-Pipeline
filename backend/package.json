{
  "name": "todo-backend",
  "version": "1.0.0",
  "description": "Todo Backend API",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --coverage --forceExit --detectOpenHandles",
    "test:integration": "jest integration.test.js --forceExit --detectOpenHandles",
    "test:regression": "jest regression.test.js --forceExit --detectOpenHandles",
    "test:setup": "node scripts/init-test-db.js",
    "test:server": "TEST_PORT=3001 NODE_ENV=test node scripts/start-test-server.js"
  },
  "dependencies": {
    "express": "^4.18.2",
    "pg": "^8.11.3",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "jest": "^29.6.2",
    "supertest": "^6.3.3",
    "nodemon": "^3.0.1"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageReporters": ["text", "lcov"],
    "testTimeout": 30000
  }
}

